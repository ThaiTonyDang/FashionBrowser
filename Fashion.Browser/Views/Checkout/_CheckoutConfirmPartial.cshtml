@model FashionBrowser.Domain.ViewModels.CheckoutItemViewModel
<div class="modal fade" id="confirm-checkout" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-body text-center font-18">
				<h4 class="padding-top-30 mb-30 weight-500">
					ARE YOU SURE ! DO YOU WANT TO DELETE THIS PRODUCT?
				</h4>
				<div class="padding-bottom-30 row" style="max-width: 170px; margin: 0 auto">
					<form asp-action="Confirmation" asp-controller="Checkout" method="post" enctype="multipart/form-data">
						<div class="col-6">
							<button type="button"
									class="btn btn-secondary border-radius-100 btn-block confirmation-btn"
									data-dismiss="modal">
								<i class="fa fa-times"></i>
							</button>
							NO
						</div>
						<div class="col-6">
							<input asp-for="@Model.CustomerItemViewModel" type="hidden" />
							<button type="submit"
									class="btn btn-primary border-radius-100 btn-block confirmation-btn">
								<i class="fa fa-check"></i>
							</button>
							YES
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>