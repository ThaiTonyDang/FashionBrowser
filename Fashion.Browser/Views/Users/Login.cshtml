@using FashionBrowser.Domain.ViewModels;
@using FashionBrowser.Domain.ViewModels.Users;
@model UserLoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<link href="~/usercss/user.css" rel="stylesheet" />
<partial name="_Alert" />

<section class="login_box_area section-margin">
    <form id="frmUser" method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 box-al">
                    <div class="login_box_img">
                        <div class="hover">
                            <h4>You are not logged in !</h4>
                            <h4>Already have an account?</h4>                        
                            <p style="color:azure; font-size: 20px">Please Login To Continue Shopping Now </p>
                            <p style="color:azure">Join us now to get great deals right away !</p>
                            <a class="button button-account" href="~/users/register">Create An Acount</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner">
                        <h3>Log in to enter</h3>
                        <div class="col-md-12 form-group">
                            <input asp-for ="Email" type="email" class="form-control" 
                            placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Password" type="password" class="form-control"
                            placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                            <span asp-validation-for=Password style="color:red"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="creat_account">
                                <input type="checkbox" id="f-option2" name="selector">
                                <label for="f-option2">Keep me logged in</label>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-login w-100">Log In</button>
                            <a href="#" style="color:black">Forgot Password?</a>
                        </div>                    
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}